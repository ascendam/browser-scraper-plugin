{
  "manifest_version": 3,
  "name": "DOMAP",
  "description": "DOMAP â€“ Interactive DOM mapping and scraping tool with human-like behaviour.",
  "version": "1.3.0",
  "author": "Peter Polgari (peterp@forgeren.com)",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "DOMAP"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "host_permissions": ["*://*/*"],
  "icons": { "48": "assets/icon48.png", "128": "assets/icon128.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/settings.js",
        "content/storage.js",
        "content/exporter.js",
        "content/cursor-sim.js",
        "content/selector-engine.js",
        "content/mapper-core.js",
        "content/runner.js",
        "content/ui-panel.js",
        "content/inject.js"
      ],
      "run_at": "document_end"
    }
  ]
}
